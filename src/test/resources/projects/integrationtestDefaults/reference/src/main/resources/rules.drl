package it.pkg;

global java.util.Set assertLast2m;

declare Measurement
	@role(event)
end

rule "colors seen in the last 2 minutes"
no-loop
when
	accumulate ( Measurement( id == "color", $colorVal : val) over window:time(2m);
				 $mySet : collectSet( $colorVal )
				 )  
then
	assertLast2m.clear();
	assertLast2m.addAll($mySet);
end